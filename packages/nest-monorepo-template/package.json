{
  "name": "nest_monorepo_template",
  "version": "0.1.0",
  "description": "nestjs template",
  "author": "Agility Jin <agility_jin@outlook.com>",
  "license": "MIT",
  "scripts": {
    "dev": "cross-env-shell NODE_ENV=development \"nest start --watch\"",
    "start:test": "cross-env-shell NODE_ENV=testing \"yarn pm2\"",
    "start:prod": "cross-env-shell NODE_ENV=production \"yarn pm2\"",
    "prebuild": "rimraf dist",
    "build": "nest build",
    "format": "prettier --write \"apps/**/*.ts\" \"libs/**/*.ts\"",
    "start": "nest start",
    "start:debug": "nest start --debug --watch",
    "prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix --ignore-path .gitignore",
    "pm2": "pm2 start --no-daemon --name nest-server dist/main.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./apps/admin/test/jest-e2e.json",
    "typeorm": "ts-node -r tsconfig-paths/register ./node_modules/typeorm/cli.js",
    "commit": "git cz"
  },
  "dependencies": {
    "@alicloud/pop-core": "^1.7.9",
    "@hapi/joi": "^17.1.1",
    "@nestjs/common": "^6.10.14",
    "@nestjs/core": "^6.10.14",
    "@nestjs/jwt": "^7.0.0",
    "@nestjs/passport": "^7.0.0",
    "@nestjs/platform-express": "^6.10.14",
    "@nestjs/swagger": "^4.3.2",
    "@nestjs/typeorm": "^7.0.0",
    "ali-oss": "^6.6.0",
    "class-transformer": "^0.3.1",
    "class-validator": "^0.11.1",
    "compression": "^1.7.4",
    "date-fns": "^2.11.1",
    "dotenv": "^8.2.0",
    "express-rate-limit": "^5.1.1",
    "helmet": "^3.22.0",
    "lodash": "^4.17.15",
    "md5": "^2.2.1",
    "mysql": "^2.18.1",
    "nestjs-session": "^1.0.1",
    "passport": "^0.4.1",
    "passport-jwt": "^4.0.0",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.0",
    "rxjs": "^6.5.4",
    "svg-captcha": "^1.4.0",
    "swagger-ui-express": "^4.1.3",
    "typeorm": "^0.2.24"
  },
  "devDependencies": {
    "@commitlint/cli": "^8.3.5",
    "@commitlint/config-conventional": "^8.3.4",
    "@nestjs/cli": "^6.13.2",
    "@nestjs/schematics": "^6.8.1",
    "@nestjs/testing": "^6.10.14",
    "@types/ali-oss": "^6.0.4",
    "@types/compression": "^1.7.0",
    "@types/dotenv": "^8.2.0",
    "@types/express": "^4.17.2",
    "@types/express-rate-limit": "^5.0.0",
    "@types/hapi__joi": "^16.0.12",
    "@types/helmet": "^0.0.45",
    "@types/jest": "25.1.2",
    "@types/lodash": "^4.14.149",
    "@types/md5": "^2.1.33",
    "@types/node": "^13.1.6",
    "@types/passport-jwt": "^3.0.3",
    "@types/supertest": "^2.0.8",
    "@typescript-eslint/eslint-plugin": "^2.12.0",
    "@typescript-eslint/parser": "^2.12.0",
    "commitizen": "^4.0.3",
    "cross-env": "^7.0.2",
    "cz-conventional-changelog": "^3.1.0",
    "eslint": "^6.7.2",
    "eslint-config-prettier": "^6.7.0",
    "eslint-plugin-import": "^2.19.1",
    "husky": "^4.2.3",
    "jest": "^24.9.0",
    "prettier": "^1.18.2",
    "supertest": "^4.0.2",
    "ts-jest": "25.2.0",
    "ts-loader": "^6.2.1",
    "ts-node": "^8.6.0",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^3.7.4"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": ".",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "./coverage",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/apps/",
      "<rootDir>/libs/"
    ],
    "moduleNameMapper": {
      "@app/db/(.*)": "<rootDir>/libs/db/src/$1",
      "@app/db": "<rootDir>/libs/db/src",
      "@app/config/(.*)": "<rootDir>/libs/config/src/$1",
      "@app/config": "<rootDir>/libs/config/src",
      "@app/oss/(.*)": "<rootDir>/libs/oss/src/$1",
      "@app/oss": "<rootDir>/libs/oss/src",
      "@app/sms/(.*)": "<rootDir>/libs/sms/src/$1",
      "@app/sms": "<rootDir>/libs/sms/src"
    }
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  }
}