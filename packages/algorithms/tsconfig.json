{
  "compilerOptions": {
    "moduleResolution": "node",
    "target": "es5",
    "module": "es2015",
    "lib": [
      "es5",
      "es2015",
      "es2016",
      "es2017",
      "dom"
    ],
    "strict": true,
    "sourceMap": true,
    "declaration": true,
    "declarationDir": "lib/types",
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "extendedDiagnostics": true,
    "emitDecoratorMetadata": true,
    "resolveJsonModule": true,
    "keyofStringsOnly": true,
    "outDir": "lib",
    "types": [
      "@types/node",
      "@types/lodash"
    ],
    "baseUrl": ".",
    "paths": {
      "~": [
        "src"
      ],
      "~/*": [
        "src/*"
      ]
    },
    "typeRoots": [
      "src/interface"
    ]
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "node_modules",
    "../../node_modules"
  ]
}
